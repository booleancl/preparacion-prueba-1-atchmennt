#!/bin/bash -e

# Agregar las instrucciones para crear la estructura de carpetas
cd soymas
mkdir carreras 
cd carreras
mkdir administracion 
mkdir artes-culinarias
mkdir peluqueria
mkdir programacion 
cd administracion 
mkdir modulo-00
mkdir modulo-01
cd modulo-00
